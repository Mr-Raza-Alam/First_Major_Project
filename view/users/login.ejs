 <!-- Login page -->

 
 <% layout("/layouts/boilierPlate") -%>
<h1 class="col-8 offset-5"><u>Login to Wanderlust</u></h1>
<div class="row mt-4">
 <div class="col-8 offset-3">
   <form action="/listings/login" method="post" class="needs-validation" novalidate>
  <div class="mb-3">
     <label for="name" class="form-label"><b>Username</b></label>
     <input type="text"  name="username" class="form-control" id="name"  required/>
    <div class="valid-feedback">
      Avialable username !!
     </div>
     <div class="invalid-feedback">
      <b>Unavailable username.please mention a valid one</b>
     </div>
  </div>

           <div class="mb-3">
     <label for="pass" class="form-label"><b>Password</b></label>
     <input type="password"  name="password" class="form-control" id="pass"  required/>
    <div class="valid-feedback">
      matched password!!
     </div>
     <div class="invalid-feedback">
      <b>Invalid Password.</b>
     </div>
    </div>

    <button class="btn btn-success">Signup</button>

    </form>
 </div>

</div>